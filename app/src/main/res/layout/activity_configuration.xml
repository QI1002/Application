<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_configuration_score"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="Score Statistics"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/bt_configuration_settings"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="The Settings"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/bt_configuration_preference"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="The Preferences"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/bt_configuration_utility"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="The Utilties"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </GridLayout>

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_revert" />

</RelativeLayout>
